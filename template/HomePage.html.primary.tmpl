{{!master(layout/_master.tmpl)}}

  <body class="container-xxl">
    <div class="header-homepage">
        <div class="header-logo-container">
            <div class="header-logo-block"></div>
        </div>        
    </div>

    <header class="row homepage-header-row">
        {{>partials/navbar}}

        <div class="main-banner">
            <h1>Geeks Learning Geek Things</h1>
            <p>
                Find inspiration, learn how technologies work, geek out on some new projects, and see what tools can help get the job done.
            </p>
            <div>
                <form class="form-inline my-2 my-lg-0">
                    <input type="text" class="form-control-inline main-banner-searchbox force-dark" placeholder="&nbsp;&nbsp;Search" /><button class="btn btn-primary btn-header-search main-banner-search-btn" type="submit"></button>
                </form>
            </div>
        </div>
    </header>

    <section class="row">
    
        <div class="col-sm-12 main-header-separator">
            <svg class="main-header-sep-triangle" width="82" height="61" viewBox="0 0 82 61" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M41.0215 61L0.318288 0.25L81.7247 0.250007L41.0215 61Z" fill="#101010"/>
            </svg>
        </div>

        <div class="col-sm-2 is-disabled-text text-md-weight text-sm" id="homepage-article-count">9 of 9 Articles</div>
        <div class="col-sm-7"></div>
        <div class="col-sm-3">
            <div class="dropdown pull-right homepage-filter-drop-down">
                <button class="btn btn-secondary dropdown-toggle text-hv-weight text-sm text-start icon" type="button" id="homepage-filter-ddl-btn" data-bs-toggle="dropdown" aria-expanded="false">
                    Featured
                </button>
                <ul id="homepage-filter-ddl" class="dropdown-menu text-sm" aria-labelledby="homepage-filter-ddl-btn">
                    <li><a class="dropdown-item" data-category-slug="all">All</a></li>
                    <li><a class="dropdown-item" data-category-slug="featured">Featured</a></li>
                    {{#categories}}
                        <li><a class="dropdown-item" data-category-slug="{{{slug}}}">{{{name}}}</a></li>
                    {{/categories}}
                </ul>
            </div>
            <span class="pull-right is-disabled-text text-md-weight text-sm">Filter By &nbsp;&nbsp;</span>
        </div>
    </section>

    <section class="row">

        <ul class="article-blocks">
            {{#directory}}<li class="category-box {{#categorySlugs}}{{{.}}} {{/categorySlugs}}" style="display:none;">
                <div class="category-box-image" style="background: url('{{{imageUrl}}}') no-repeat center center;background-size:cover;" onclick="window.location.href = '{{{url}}}';"></div>
                <div class="category-box-infobox">
                    <div class="category-box-title text-md text-hv-weight" onclick="window.location.href = '{{{url}}}';">{{{title}}}</div>
                    <div class="category-box-slugs">
                        <ul class="category-box-slugs-list">
                            {{#categorySlugs}}<li class="text-sm is-disabled-text">{{{.}}}</li>{{/categorySlugs}}
                        </ul>
                    </div>
                    <div class="category-box-profile">
                        <div class="pull-left" onclick="window.location.href = 'about.html';"><div class="geekdojo-profile"></div><div class="geekdojo-profile-username text-md-weight text-sm">geekdojo</div></div>
                        <div class="pull-right"></div>
                    </div>
                </div>
            </li>{{/directory}}
        </ul>
    </section>

    <footer>
      {{>partials/footer}}
    </footer>

    {{>partials/scripts}}
  </body>