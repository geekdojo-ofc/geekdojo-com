{{!master(layout/_master.tmpl)}}

<section class="hero-banner container-fluid">    
    <div class="row">
        <div class="col-lg-2">
            <p class="supertitle is-uppercase letter-spacing-wide font-size-xs">GET INSPIRED</p>
            <nav>
                <ul class="topic-list">
                    <li id="all-category" data-category-slug="all">All</li>
                    <li id="featured-category" data-category-slug="featured">Featured</li>
                    <li id="learn-category" data-category-slug="learn" class="is-bottom-bordered">Learn</li>
                    {{#categories}}
                        <li id="{{{slug}}}-category" data-category-slug="{{{slug}}}">{{{name}}}</li>
                    {{/categories}}
                </ul>
            </nav>
        </div>
        <div class="col-lg-10 ">
            <div style="text-align: center;">
                <ul class="article-blocks">

                {{#directory}}
                    <li class="category-box {{#categorySlugs}}{{{.}}} {{/categorySlugs}}" style="display:none;">
                        <div class="article-block-title font-size-xs " title="{{{title}}}"><a href="{{{url}}}" title="{{{title}}}"><img class="geek-dojo-icon-16" src="/favicon.ico" /> {{{title}}}</a></div>                 
                        <div class="article-block-img" style="background: url('{{{imageUrl}}}') no-repeat center center;background-size:cover;" onclick="window.location.href = '{{{url}}}';" title="{{{title}}}"></div>
                    </li>
                {{/directory}}
                
                </ul>
            </div>
        </div>        
    </div>

  </section>